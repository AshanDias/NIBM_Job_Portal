@model ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container login-container">
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h1 style="color: #2F4189;" class="text-center fw-bold">NIBM Job Portal</h1>
            <div class="container">

                <div class="span4"></div>
                <div class="span4">
                    <a asp-controller="Account" asp-action="Login">
                        <img src="~/images/logo2.png" width="180px" height="auto" style="display: block; margin-top: 20%;
                                margin-left: auto;
                                margin-right: auto;">
                    </a>
                </div>
                <div class="span4"></div>

            </div>
        </div>
        <div class="col-md-6 login-form-2">
            <h3>Reset Password</h3>
            <p class="text-light">@ViewData["status"] </p>
            <p class="text-light">@ViewData["error"] </p>
            <form method="post" asp-action="ForgotPasswordPost" asp-controller="Account">

                <div class="form-group">
                    <div class="col-lg-12" style="padding-right:0px;padding-left: 0px;">
                        <input type="text" asp-for="Email" value='' placeholder="Email" class='form-control'>
                        <a><i class='fa fa-envelope times-icon' aria-hidden='true'></i></a>
                        <span asp-validation-for="Email" class="form-text text-light"></span>
                    </div>
                </div>

                <div class="form-group text-center">

                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-sm btn-light text-primary" style=" width: 100px !important;">Submit</button>
                    <br>
                    <br>
                    <a class="text-light m-1" style=" width: 100px !important;" asp-area="" asp-controller="Account" asp-action="Login">Signin</a>
                </div>
            </form>

            <div class="container text-center">
                <div class="wrap">
                    <span>
                        <a class="text-light" asp-area="" asp-controller="TNC" asp-action="index">Terms and Condition</a> &nbsp;
                        <a class="text-light" asp-controller="TNC" asp-action="PrivacyPolicy">Privacy Policy</a>
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>

