@model ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container login-container">
    <div class="row">
        <div class="col-md-6 login-form-1">
            <h1 style="color: #2F4189;" class="text-center fw-bold">NIBM Job Portal</h1>
            <div class="container">

                <div class="span4"></div>
                <div class="span4">
                    <img src="~/images/logo2.png" width="180px" height="auto" style="display: block; margin-top: 20%;
                                margin-left: auto;
                                margin-right: auto;">
                </div>
                <div class="span4"></div>

            </div>
        </div>
        <div class="col-md-6 login-form-2">
            <h3>Reset Password</h3>
            <form method="post" asp-action="ForgotPasswordPost" asp-controller="Account">
                <div asp-validation-summary="All" class="text-white"></div>
                <div class="form-group">
                    <div class="col-lg-12" style="padding-right:0px;padding-left: 0px;">
                        <input type="text" asp-for="Email" value='' placeholder="Email" class='form-control icon-input'>
                        <a><i class='fa fa-envelope times-icon' aria-hidden='true'></i></a>
                    </div>
                </div>

                <div class="form-group text-center">

                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-sm btn-success text-light">Submit</button>

                </div>
            </form>

            <div class="container text-center">
                <div class="wrap">
                    <span>
                        <a href="" class="text-light">Terms and Condition</a> &nbsp;
                        <a href="" class="text-light">Privacy Policy</a>
                    </span>
                </div>
            </div>

        </div>
    </div>
</div>

