@model IEnumerable<AdminCompanyViewModel>
@section scripts{
    <script src="@Url.Content("~/js/sideBar.js")" type="text/javascript"></script>
    <script>
        changeSideBarButtonStatus("sidebar_company");
    </script>
}

<div class="
              d-flex
              justify-content-left
              flex-wrap flex-md-nowrap
              align-items-center
              pb-2
              mb-3
              border-bottom
            ">
    <h2 class="h2">Company Profiles</h2>
</div>


<div class="container" style="margin-left: 0px">
    <a class="btn btn-sm btn-primary mb-1" asp-area="" asp-controller="Company" asp-action="Create"> <i class="fa fa-plus-circle" aria-hidden="true"></i> Add New Profile</a>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Company ID</th>
                <th>Company Name</th>
                <th>Company Email</th>
                <th>Status</th>
                <th>Profile State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Company_Name</td>
                    <td>@item.Email</td>
                    <td>
                        @if (item.Status == 1)
                        {
                            <span class="text-success">Enabled</span>
                        }
                        else
                        {
                            <span class="text-danger">Disabled</span>
                        }
                    </td>
                    <td>
                        <div class="row">
                            <button class="btn btn-sm btn-primary m-1" onclick="Enable(@item.Id)" > <i class="fa fa-pencil-square" aria-hidden="true"></i> Enable </button>
                            <button class="btn btn-sm btn-danger m-1" onclick="Disable(@item.Id)"> <i class="fa fa-times-circle" aria-hidden="true"></i> Disable </button>
                        </div>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>


<script>

    function Enable(id) {

           $.ajax({
                   url: '@Url.Action("ChangeStatus", "Company")',
                   method: 'POST',
                   data: { status: 1 ,Id:id},
                   success: function (data) {
                       window.location.reload();
                   }

              });
    }

    function Disable(id) {
       
             $.ajax({
                   url: '@Url.Action("ChangeStatus", "Company")',
                   method: 'POST',
                   data: { status: 0, Id: id},
                   success: function (data) {
                       window.location.reload();
                   }

              });
    }

</script>