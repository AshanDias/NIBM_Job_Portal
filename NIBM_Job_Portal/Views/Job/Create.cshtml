@model NIBM_Job_Portal.Models.JobViewModel
@section scripts{
    <script src="@Url.Content("~/js/sideBar.js")" type="text/javascript"></script>
    <script>
        changeSideBarButtonStatus("sidebar_job");

        $(document).ready(function ($) {
            $(function () {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#flyer').attr('src', e.target.result);
                }

                function readURL(input) {
                    if (input.files && input.files[0]) {
                        reader.readAsDataURL(input.files[0]);
                    }
                }

                $("#file").change(function () {
                    readURL(this);
                });
            });

        });
    </script>
}

@{
    ViewData["Title"] = "Job";
}

<div class="
              d-flex
              justify-content-left
              flex-wrap flex-md-nowrap
              align-items-center
              pb-2
              mb-3
              border-bottom
            ">
    @if (Model.Id != 0)
    {
        <h2 class="h2">Edit Job</h2>
    }
    else
    {
        <h2 class="h2">Add Job</h2>
    }
</div>

<div class="container" style="margin-left: 0px">
    <div class="col-lg-8">
        <form asp-action="Create" asp-controller="Job" method="post" enctype="multipart/form-data">

            <input type="hidden" class="form-control" asp-for="Id">
            <div class="row">
                @if (Model.Id != 0)
                {
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="">Reference #</label>
                            <input type="text"
                                   class="form-control" placeholder="Reference #" asp-for="Id" disabled />
                            <span class="form-text text-muted"></span>
                        </div>
                    </div>
                }
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="">Job Category</label>
                            <select class="form-select form-select-sm form-control" asp-for="JobCategoryId" asp-items="@(new SelectList(Model.jobCategories, "Id", "Name"))">
                                <option selected value="">Choose</option>
                            </select>
                            <input type="hidden" asp-for="JobCategoryId" />
                            <span asp-validation-for="JobCategoryId" class="form-text text-danger"></span>
                        </div>
                    </div>

                    @*<div class="col-lg-4">
                        <div class="form-group">
                            <label for="">Company</label>
                            <select class="form-select form-select-sm form-control" asp-for="CompanyId" asp-items="@(new SelectList(Model.companyList, "Id", "Company_Name"))">
                                <option selected selected value="">Choose</option>
                            </select>
                            <input type="hidden" asp-for="CompanyId" />
                            <span asp-validation-for="CompanyId" class="form-text text-danger"></span>
                        </div>
                    </div>*@
                </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Job Position</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Position"
                               placeholder="Job Position" />
                        <span asp-validation-for="Position" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Closing Date</label>
                        @if (Model.Id != 0)
                        {
                            <input id="clossingDate" type="date" 
                                   class="form-control"
                                   asp-for="ClosingDate"
                                   placeholder="" />
                        }
                        else
                        {
                            <input id="clossingDate" type="date"
                                   value="@DateTime.Now.Date"
                                   class="form-control"
                                   asp-for="ClosingDate"
                                   placeholder="" />
                        }

                    <span asp-validation-for="ClosingDate" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="">Job Description</label>
                        <textarea class="form-control"
                                  asp-for="Description"
                                  cols="30"
                                  rows="6"
                                  placeholder="Job Description"></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Attach Bussiness Flyer</label>
                        <input type="file" id="file" class="text-light" asp-for="Image" />
                        <span class="form-text text-muted"></span>
                    </div>
                    <input type="hidden" class="form-control" asp-for="jobFlyer">
                </div>
                <div class="col-lg-6 text-right">
                    <div class="form-group">
                        <div class="text-right">
                            @if (Model.Id != 0)
                            { 

                                <button class="btn btn-md text-light" type="submit"
                                        style="background-color: #2f4189">
                                    Update
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-md text-light" type="submit"
                                        style="background-color: #2f4189">
                                    Add
                                </button>
                            }

                        </div>

                    </div>
                </div>
            </div>
            <div class="row">

                <div class="container">

                    @if (Model.jobFlyer != null && Model.Id != 0)
                    {
                        <img src="@Model.jobFlyer.ToString()" id="flyer" alt="..." class="img-thumbnail" width="200px" height="auto">
                    }
                    else
                    {
                        <img src="~/images/logo2.png" id="flyer" alt="..." class="img-thumbnail" width="200px" height="auto">
                    }


                </div>

            </div> 
           
        </form>
    </div>
</div>