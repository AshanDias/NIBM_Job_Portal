@model StudentJobPost
@{
    ViewData["Title"] = "ApplicationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="
              d-flex
              justify-content-between
              flex-wrap flex-md-nowrap
              align-items-center
              pb-2
              mb-3
              border-bottom
            ">
    <h1 class="h2">Applicant Summery</h1>  
    <a href="@Url.Action("JobApplications", "Job", new { Id = 1})"class="btn btn-primary btn-sm">
        <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>  back
    </a>
</div>
@if (Model != null)
{
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <img src="~/images/user.jpg"
                 alt="..."
                 class="img-thumbnail" />
        </div>
        <div class="col-lg-9">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <h4 class="card-title">Applicant Details & Skils</h4>
                        </div>
                        <div class="col-lg-6 float-right">
                            <a href="https://www.facebook.com/" target="_blank">
                                <img src="~/images/logos/fblogo.png"
                                     alt="fblogo"
                                     width="40px;"
                                     class="img-fluid p-1" />
                            </a>

                            <a href="https://www.linkedin.com/" target="_blank">
                                <img src="~/images/logos/in.png"
                                     alt="fblogo"
                                     width="40px;"
                                     class="img-fluid p-1" />
                            </a>
                            <a href="https://github.com/" target="_blank">
                                <img src="~/images/logos/github.png"
                                     alt="fblogo"
                                     width="40px;"
                                     class="img-fluid p-1" />
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <table class="table table-responsive">
                                <tbody>
                                    <tr>
                                        <td>Name</td>
                                        <td>@Model.Name</td>
                                    </tr>
                                    <tr>
                                        <td>Age</td>
                                        <td>@Model.Age</td>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <td>@Model.Email</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-6">
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk1</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk2</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk3</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk4</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk5</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk6</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk7</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk8</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk9</span>
                            <span class="badge badge-success ml-1 shadow-lg"
                                  style="min-width: 3rem">@Model.Sk10</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <h6 for="">Height Qualifications</h6>
            <div class="col">
                <div class="row">
                    <div class="alert alert-success ml-1" role="alert">
                        @Model.Ql1
                    </div>
                    <div class="alert alert-success ml-1" role="alert">
                        @Model.Ql2
                    </div>
                    <div class="alert alert-success ml-1" role="alert">
                        @Model.Ql3
                    </div>
                    <div class="alert alert-success ml-1" role="alert">
                        @Model.Ql4
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <div class="form-group">
                <h6 for="">Description</h6>
                <textarea class="form-control shadow-md"
                          name="" disabled
                          id="" asp-for="Description"
                          rows="4"></textarea>
            </div>
        </div>
    </div>
</div>

}
else
{
    <p>No Record Found!</p>
}