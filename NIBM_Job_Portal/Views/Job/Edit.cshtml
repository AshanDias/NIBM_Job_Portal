@model NIBM_Job_Portal.Models.JobViewModel
@section scripts{
    <script src="@Url.Content("~/js/sideBar.js")" type="text/javascript"></script>
    <script>
        changeSideBarButtonStatus("sidebar_job");
    </script>
}
@{
    ViewData["Title"] = "Job";
}

<div class="
              d-flex
              justify-content-left
              flex-wrap flex-md-nowrap
              align-items-center
              pb-2
              mb-3
              border-bottom
            ">
    <h2 class="h2">Edit Job</h2>
</div>

<div class="container" style="margin-left: 0px">
    <div class="col-lg-8">
        <form action="" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Reference #</label>
                        <input type="text" disabled
                               class="form-control" placeholder="Reference #" />
                        <span class="form-text text-muted"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Job Category</label>
                        <select class="form-select form-select-sm form-control">
                            <option selected>Choose</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <span class="form-text text-muted"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Job Position</label>
                        <input type="text"
                               class="form-control"
                               placeholder="Job Position" />
                        <span class="form-text text-muted"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label for="">Closing Date</label>
                        <input type="date"
                               class="form-control"
                               placeholder="" />
                        <span class="form-text text-muted"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="">Job Description</label>
                        <textarea class="form-control"
                                  name=""
                                  id=""
                                  cols="30"
                                  rows="6"
                                  placeholder="Job Description"></textarea>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label for="">Attach Bussiness Flyer</label>
                        <input type="file" class="text-light" />
                        <span class="form-text text-muted"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 text-right">
                    <button class="btn btn-sm text-light"
                            style="background-color: #2f4189">
                        Delete
                    </button>
                    <button class="btn btn-sm text-light"
                            style="background-color: #2f4189">
                        Update
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>