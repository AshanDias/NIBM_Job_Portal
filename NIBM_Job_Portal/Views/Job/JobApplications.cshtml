@model JobApplicationViewModel
@section scripts{
    <script src="@Url.Content("~/js/sideBar.js")" type="text/javascript"></script>
    <script>
        changeSideBarButtonStatus("sidebar_job");
    </script>
}
@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="
              d-flex
              justify-content-left
              flex-wrap flex-md-nowrap
              align-items-center
              pb-2
              mb-3
              border-bottom
            ">
    <h2 class="h2">@ViewData["Title"] Applicants</h2>
</div>

<div class="container" style="margin-left: 0px">
   
        <div class="container">
            <div class="row float-right">
                <button type="button" onclick="DownloadSingle()" class="btn btn-sm btn-success text-light m-1"> <i class="fa fa-hand-pointer-o" aria-hidden="true"></i>Download Selected Items</button>
                <a class="btn btn-sm btn-success text-light m-1" href="@Url.Action("DownloadAll","Job")"> <i class="fa fa-download" aria-hidden="true"></i> Download All</a>
            </div>
        </div>
        <table class="table text-center">
            <thead>
                <tr>
                    <th></th>
                    <th>Ref. No</th>
                    <th>Applicant Name</th>
                    <th>Applicant Email</th>
                    <th>Applied Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {


                    foreach (var item in Model.StudentJobPost)
                    {

                    <tr>
                        <td style="width:10px;" class="pl-5">
                            <input type="checkbox" id="ch_@item.Id" value="" class="form-check-input" onclick="UpdateData('@item.Id')" >
                            <input type="hidden" asp-for="files" />
                        </td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Date</td>
                        <td>
                            <div class="row justify-content-center">
                                <a class="btn btn-sm btn-primary m-1" href="@Url.Action("ApplicationDetails", "Job", new { Id = item.Id })"> <i class="fa fa-eye" aria-hidden="true"></i></a>
                            </div>
                        </td>
                    </tr>



                    }


            }
            else
            {
                <p>Record Not found!</p>
            }

            </tbody>
        </table>
   
</div>

<script>

    var data = [];
    function UpdateData(id) {
        var result = $.inArray(id, data);
        if (result != -1)
        {
            data = $.grep(data, function (value) {
                return value != id;
            });
        } else
        {
            data.push(id);
        }



    }

    function DownloadSingle() {
        if (data.length > 0) {


            $.ajax({
                url: '@Url.Action("DownloadSelected", "Job")',
                method: 'POST',
                data: { data: data },
                success: function (r) {

                    window.location.href = 'data:application/zip;base64,' + r;

                }
            });
        } else {
            alert("Please select items to download!");
        }
    }



</script>