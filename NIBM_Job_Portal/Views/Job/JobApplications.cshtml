@model IEnumerable<StudentJobPost>
@section scripts{
    <script src="@Url.Content("~/js/sideBar.js")" type="text/javascript"></script>
    <script>
        changeSideBarButtonStatus("sidebar_job");
    </script>
}
@{
    ViewData["Title"] = "JobApplications";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="
              d-flex
              justify-content-left
              flex-wrap flex-md-nowrap
              align-items-center
              pb-2
              mb-3
              border-bottom
            ">
    <h2 class="h2">Software Engineering Applicants</h2>
</div>

<div class="container" style="margin-left: 0px">
    <div class="container">
        <div class="row float-right">
            <a class="btn btn-sm btn-success text-light m-1" href=""> <i class="fa fa-hand-pointer-o" aria-hidden="true"></i>Download Selected Items</a>
            <a class="btn btn-sm btn-success text-light m-1" href=""> <i class="fa fa-download" aria-hidden="true"></i> Download All</a>
        </div>
    </div>
    <table class="table text-center">
        <thead>
            <tr>
                <th></th>
                <th>Ref. No</th>
                <th>Applicant Name</th>
                <th>Applicant Email</th>
                <th>Applied Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="width:10px;" class="pl-5">
                        <input type="checkbox" class="form-check-input" name="" id="" value="checkedValue" checked>
                    </td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Date</td>
                    <td>
                        <div class="row justify-content-center">
                            <a class="btn btn-sm btn-primary m-1" href="@Url.Action("ApplicationDetails", "Job", new { Id = item.Id })"> <i class="fa fa-eye" aria-hidden="true"></i></a>
                        </div>
                    </td>
                </tr>

            }




        </tbody>
    </table>
</div>

